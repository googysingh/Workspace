package objectrepository;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.interactions.Actions;

public static class logout {

	WebDriver driver;

	public logout(WebDriver driver) {
			
			this.driver = driver;
		}

	Actions a=new Actions(driver);
	WebElement userName = driver.findElement(By.cssSelector("div._2aUbKa"));
	WebElement passWord = driver.findElement(By.xpath("//div[contains(test(),'Logout')]"));

	public static void flipkartLogout() {
		a.moveToElement(userName).click(passWord).build().perform();
	}


}